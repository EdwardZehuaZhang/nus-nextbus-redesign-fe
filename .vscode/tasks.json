{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Expo Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "expo",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "^ERROR\\s+(.*)$",
            "message": 1
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Starting project",
          "endsPattern": "^.*Metro waiting on.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "echo": true,
        "focus": false
      }
    },
    {
      "label": "Check Browser Console Errors",
      "type": "shell",
      "command": "echo",
      "args": ["Checking browser console errors..."],
      "problemMatcher": []
    },
    {
      "label": "Check Browser Console Logs",
      "type": "shell",
      "command": "echo",
      "args": ["Checking browser console logs..."],
      "problemMatcher": []
    }
  ]
}
